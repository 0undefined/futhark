fun {[real],[[[real]]]} main([int] arr) =
  let vs = map(fn [real] (int a) =>
                  map( fn real (int x) => real(2*x*a)
                     , iota(3) )
              ,  arr)
  in {reduce( fn [real] ([real] a, [real] b) =>
                zipWith(+, a, b)
            , replicate(3,0.0), vs),
      map(fn [[real]] ([real] r) =>
             transpose(replicate(5, r)),
          vs)}


